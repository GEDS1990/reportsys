<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	 http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- 启动触发器的配置开始 -->
    <bean name="startQuertz" lazy-init="false" autowire="no"
          class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref bean="myJobTrigger_execute_dailyReport" />
                <ref bean="myJobTrigger_execute_weeklyReport" />
            </list>
        </property>
    </bean>
    <!-- 启动触发器的配置结束 -->

    <!-- 调度的配置开始 -->
   
    <!-- quartz-2.x的配置 -->
    <bean id="myJobTrigger_execute_dailyReport"
          class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail">
            <ref bean="myJobDetail_execute_dailyReport" />
        </property>
        <!-- cron表达式     秒    分    时    天   月     星期几       年（可选） ， * 表示每一个  ，？表示不设置 ，没有设置 表示当前  -->
        <property name="cronExpression">
            <value>10 34 15 * * ?</value>
        </property>
    </bean>
    <bean id="myJobTrigger_execute_weeklyReport"
          class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail">
            <ref bean="myJobDetail_execute_weeklyReport" />
        </property>
        <!-- "0 10 9 ? * 5" 每年每月的星期五的9:10触发  -->
        <property name="cronExpression">
            <value>12 34 15 ? * FRI</value>
        </property>
    </bean>
    <!-- 调度的配置结束 -->

    <!-- job的配置开始 -->
     <!-- 产生日报表公告 -->
    <bean id="myJobDetail_execute_dailyReport"
          class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject">
            <ref bean="myJob" />
        </property>
        <property name="targetMethod">
            <value>execute_dailyReport</value>
        </property>
    </bean>
    <!--  产生周报表公告 -->
    <bean id="myJobDetail_execute_weeklyReport"
          class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject">
            <ref bean="myJob" />
        </property>
        <property name="targetMethod">
            <value>execute_weeklyReport</value>
        </property>
    </bean>
    <!-- job的配置结束 -->

    
<!-- 工作的bean -->
    <bean id="myJob" class="com.midnight.reportsys.scheduler.CreateNoticeTask" />
</beans>